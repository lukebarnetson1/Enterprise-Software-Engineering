<%- include('../partials/header') %>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title text-center mb-4">Forgot Password</h2>
          <p class="text-center text-muted mb-4">Enter your email address, and we'll send you a link to reset your password.</p>
          <form method="POST" action="/auth/forgot">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <div class="mb-3">
              <label for="email" class="form-label">Email Address:</label>
              <input class="form-control" type="email" id="email" name="email" required autofocus />
            </div>
            <div class="d-grid">
                <button class="btn btn-primary" type="submit">Send Reset Link</button>
            </div>
          </form>
        </div>
         <div class="card-footer text-center py-3">
             <a href="/auth/login">Remembered your password? Log In</a>
         </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>