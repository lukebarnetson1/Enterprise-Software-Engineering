<%- include('../partials/header') %>

<div class="container mt-4">
   <div class="row justify-content-center">
      <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                     <h2 class="card-title text-center mb-4">Update Email Address</h2>
                     <p class="text-center text-muted mb-4">A confirmation link will be sent to your current email address.</p>
                     <form method="POST" action="/auth/update-email">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                        <div class="mb-3">
                            <label for="newEmail" class="form-label">New Email Address:</label>
                            <input class="form-control" type="email" name="newEmail" id="newEmail" required autofocus/>
                        </div>
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="/settings" class="btn btn-secondary">Cancel</a>
                            <button class="btn btn-primary" type="submit">Send Confirmation Email</button>
                        </div>
                    </form>
                </div>
            </div>
      </div>
   </div>
</div>

<%- include('../partials/footer') %>